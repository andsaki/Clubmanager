<% today = @day %>
<div class = "calender">
  <table align="center">
    <caption><p><%= today.strftime('%Y年') %></p>
    <%= link_to "#{today.last_month.strftime('%m')}月","-1"%>
    <%= today.strftime('%m月') %>
    <%= link_to "#{today.next_month.strftime('%m')}月","1"%></p></caption>
    <tr>
      <th width="150" height="50"><font color="red">日</font></th>
      <th width="150" height="50">月</th>
      <th width="150" height="50">火</th>
      <th width="150" height="50">水</th>
      <th width="150" height="50">木</th>
      <th width="150" height="50">金</th>
      <th width="150" height="50"><font color="blue">土</font></th>
    </tr>
    <tr>
      <% month = today.strftime('%m')%>
      <% d = today.at_beginning_of_month.at_beginning_of_week(:sunday)%>
      <% 1.upto(5).each do|i|%>
    <tr>
      <% (d..d.end_of_week(:sunday)).each do|c|%>
      <th width="150" height="80"><font size="1"><%= (c.strftime('%m') == month)? c.strftime('%d'): "  "%></font>
        <br><font size="1">
          <% @events.each do |e| %>
          <% if (c.strftime('%m') == e.month) && (c.strftime('%d') == e.date) then %>
          <%= link_to "#{e.title}", "events/show/#{e.id}" %>
          <% else %>
          <% end %>
          <% end %>
      </br></font></th>
      <% end %>
    </tr>
    <% d = d + 1.week %>
    <% end %>
  </table>
