<h3>Add New Event</h3>

<%= form_for Event.new do |f| %>
  <p><%= f.text_field :title, :placeholder => "title" %></p>
  <p><%= f.text_area :about, :placeholder => "about" %></p>
  <p>
  <% today = Date.today %>
  <%= f.select :year, [["2017","2017"],["2018","2018"],["2019","2019"]], :selected => "#{today.strftime("%y")}" %>
  <%= f.select :month, [["1","01"],["2","02"],["3","03"],["4","04"],["5","05"],["6","06"],["7","07"],["8","08"],["9","09"],["10","10"],["11","11"],["12","12"]], :selected => "#{today.strftime("%m")}" %>
  <%= f.select :date, [["1","01"],["2","02"],["3","03"],["4","04"],["5","05"],["6","06"],["7","07"],["8","08"],["9","09"],["10","10"],["11","11"],["12","12"],["13","13"],["14","14"],["15","15"],["16","16"],["17","17"],["18","18"],["19","19"],["20","20"],["21","21"],["22","22"],["23","23"],["24","24"],["25","25"],["26","26"],["27","27"],["28","28"],["29","29"],["30","30"],["31","31"]], :selected => "#{today.strftime("%d")}" %>
  </p>
  <%= f.submit %>
<% end %>
