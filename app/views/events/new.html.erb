<h1>イベントを作成する</h1>

<%= form_for Event.new do |f| %>
  <p>title</p>
  <p><%= f.text_field :title %></p>
  <p>about</p>
  <p><%= f.text_area :about %></p>
  <P>date</p>
  <p>
  <%= f.select :year, [["2017","2017"],["2018","2018"],["2019","2019"]] %>
  <%= f.select :month, [["1","01"],["2","02"],["3","03"],["4","04"],["5","05"],["6","06"],["7","07"],["8","08"],["9","09"],["10","10"],["11","11"],["12","12"]] %>
  <%= f.select :date, [["1","01"],["2","02"],["30","30"],["31","31"]] %>
  </p>
  <%= f.submit %>
<% end %>
