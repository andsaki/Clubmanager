<div class = "member">
  <h1>
    All Member
  </h1>

  <ul>
    <% @group = Group.where("id = ?", current_user.state_group_id).first %>
    <li>
      <p><%= link_to @group.master_name, "/users/#{@group.master_id}" %></p>
    </li>
    <% @member = Member.where("group_id = ?", current_user.state_group_id).where("p = ?", 1 ) %>
    <% @member.each do |p|%>
    <li>
      <p><%= link_to p.user_name, "/users/#{p.user_id}" %></p>
    </li>
    <% end%>
  </ul>

</div>
