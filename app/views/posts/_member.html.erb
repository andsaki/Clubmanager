<div class = "member">

  <% if current_user.state_group_id == -1 || current_user.state_group_id == nil%>
  <% else%>
    <h1>
      <%= link_to 'All Member', members_show_path  %>
    </h1>

    <ul>
      <% @group = Group.where("id = ?", current_user.state_group_id).first %>
      <li>
        <p><%= link_to @group.master_name, "/users/#{@group.master_id}" %></p>
      </li>
      <% @member = Member.where("group_id = ?", current_user.state_group_id) %>
      <% @member.each do |p|%>
      <li>
        <p><%= link_to p.user_name, "/users/#{p.user_id}" %></p>
      </li>
      <% end%>
    </ul>
  <%end%>

</div>
