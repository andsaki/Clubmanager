<div class = "profile">
  <h1>
    Profile
  </h1>
    <% if current_user.image? %>
      <%= link_to image_tag(current_user.image.url), current_user %>
    <% else %>
      <%= link_to image_tag('apio.png', :size => '100x100'), current_user %>
    <% end %>
    <h2>
      自己紹介
    </h2>
    <% @user = User.where("id = ?", current_user.id).first %>
    <%= @user.comment %>

  <h2>所属団体</h2>
  <ul>
    <!-- まずは管理している団体を表示 -->
    <% @group = Group.where("master_id = ?", current_user.id) %>
    <% @group.each do |p| %>
    <li>
      <p><%= link_to p.name, "/groups/out_top/#{p.id}"%></p>
    </li>
    <% end %>
    <!-- 次に所属している団体を表示 -->
    <% @member = Member.where("user_id = ?", current_user.id) %>
    <% @member.each do |p| %>
    <% @group = Group.where("id = ?", p.group_id).first %>
    <li>
      <p><%= link_to @group.name, "/groups/out_top/#{@group.id}" %></p>
    </li>
    <% end%>
  </ul>
</div>
