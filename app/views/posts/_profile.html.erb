<div class = "dropposi">
  <ul id = "fade-in2" class="dropmenu">
    <li><%= image_tag('edit_b.png', class: 'edit_b') %>
      <ul>
        <li><%= link_to "Manage","/groups/my_group"%></li>
        <li><%= link_to "Mypage",current_user%></li>
        <li><%= link_to "Edit",edit_user_registration_path%></li>
        <li><%= link_to 'logout', destroy_user_session_path, method: :delete%></li>
      </ul>
    </div>
  <br/>
  <br/>

  <h1 align = "center">
    Profile
  </h1>


  <div class = "profile">
    <% if current_user.image? %>
      <%= link_to image_tag(current_user.image.url), current_user %>
    <% else %>
      <%= link_to image_tag('apio.png', :size => '100x100'), current_user %>
    <% end %>
    <br/>
    <br/>

    <h2>
      自己紹介
    </h2>
    <% @user = User.where("id = ?", current_user.id).first %>
    <%= @user.comment %>
    <br/>
    <br/>
    <br/>
    <br/>
  <h2>所属団体</h2>
  <ul class="linklist">
    <% @group = Group.where("master_id = ?", current_user.id) %>
    <% @group.each do |p| %>
    <li>
      <p><%= link_to p.name, "/groups/out_top/#{p.id}"%></p>
    </li>
    <% end %>

    <% @member = Member.where("user_id = ?", current_user.id).where("p = ?", 1 ) %>
    <% @member.each do |p| %>
    <% @group = Group.where("id = ?", p.group_id).first%>
    <li>
      <p><%= link_to @group.name, "/groups/out_top/#{@group.id}" ,class: "linkline"%></p>
    </li>
    <% end%>

</div>
<br/>
<br/>
<br/>
<br/>
