<section class = "column">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <h1>
    Information
  </h1>

  <%= link_to 'Add New!', new_post_path, class: "link_btn"%>
  <div class = "box_scrollbar">
      <p>
        <ul class = "board">
          <% @posts.each do |post| %>
          <li>
            <%= post.updated_at.strftime('%Y/%m/%d %H:%M') %>
            <br>
            <font size = "5"><%= link_to post.title, post_path(post) ,class: "infolink"%></font>
          </li>
          <% end %>
        </ul>
      </p>
  </div>

  <h1>
    All Member
  </h1>

  <ul class = "board">
    <% @group = Group.where("id = ?", current_user.state_group_id).first %>
    <li>
      <p><%= @group.master_name%></p>
    </li>
    <% @member = Member.where("group_id = ?", current_user.state_group_id) %>
    <% @member.each do |p|%>
    <li>
      <p><%= p.user_name %></p>
    </li>
    <% end%>
  </ul>

</section>
