<% today = Date.today%>
<table align="center">
  <caption><%= today.strftime('%Y年%m月')%></caption>
  <tr>
    <th width="50" height="10"><font color="red">日</font></th>
    <th width="50" height="10">月</th>
    <th width="50" height="10">火</th>
    <th width="50" height="10">水</th>
    <th width="50" height="10">木</th>
    <th width="50" height="10">金</th>
    <th width="50" height="10"><font color="blue">土</font></th>
  </tr>
  <tr>
<% month = today.strftime('%m')%>
<% d = today.at_beginning_of_month.at_beginning_of_week(:sunday)%>
<% 1.upto(5).each do|i|%>
  <tr>
<% (d..d.end_of_week(:sunday)).each do|c|%>
    <th width="10" height="50"><a href=""><%= (c.strftime('%m') == month)? c.strftime('%d'): "  "%></a>
    <br><font size="1">
    <% @events.each do |e| %>
    <%= ( (c.strftime('%m') == e.month) && (c.strftime('%d') == e.date) )? e.title : "  "%>
    <% end %>
    </br></font></th>
<% end %>
  </tr>
<% d = d + 1.week %>
<% end %>
</table>
