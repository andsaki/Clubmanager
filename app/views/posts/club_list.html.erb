<section class = "column">
  <div class="titleposi">
    <h1>
      Myclub
    </h1>
  </div>
  <h1><font face = "sans-serif">
    管理団体
  </h1></font>
    <ul class="linklist">
      <% @group = Group.where("master_id = ?", current_user.id) %>
      <% @group.each do |p| %>
      <li>
        <p><%= link_to p.name, "/groups/out_top/#{p.id}"%></p>
      </li>
      <% end %>
    </ul>

  <h1><font face = "sans-serif">
    所属団体
  </h1></font>
    <ul class="linklist">
      <% @member = Member.where("user_id = ?", current_user.id).where("p = ?", 1 ) %>
      <% @member.each do |p| %>
      <% @group = Group.where("id = ?", p.group_id).first%>
      <li>
        <p><%= link_to @group.name, "/groups/out_top/#{@group.id}" ,class: "linkline"%></p>
      </li>
      <% end%>
    </ul>

  <h1><font face = "sans-serif">
    申請中の団体
  </h1></font>
    <ul class="linklist">
      <% @member = Member.where("user_id = ?", current_user.id).where("p = ?", 0 ) %>
      <% @member.each do |p| %>
      <% @group = Group.where("id = ?", p.group_id).first%>
      <li>
        <p><%= link_to @group.name, "/groups/out_top/#{@group.id}" ,class: "linkline"%></p>
      </li>
      <% end%>
    </ul>

</section>
