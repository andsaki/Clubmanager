
<section class="column", >
  <div class = "titleposi">
  <h1>
    Profile

  </h1>
  </div>

<% provide(:title, @user.username) %>
<h1><%= @user.username %></h1>



<% if @user.image? %>
  <div class="thumbnail">
    <%= image_tag @user.image.url %>
  </div>
<% else %>
  <%= link_to image_tag('apio.png', :size => '100x100') %>
<% end %>

<h2>誕生日: <%= @user.month %>/<%= @user.day %></h2>
<h2>年齢: <%= @user.age %></h2>
<h2>所在地: <%= @user.location %></h2>
<h2>自己紹介: <%= simple_format(@user.comment) %></h2>

<br>
<br>
<br>

<% if current_user.id != @user.id%>

  <% @message = Message.new %>
  <%= form_for @message do |f| %>
    <h2><%= f.label :message, "Message:" %></h2>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= f.hidden_field :id, :value => @user.id %>
    <%= f.hidden_field :username, :value => @user.username %>
    <%= f.hidden_field :email, :value => @user.email %>
    <%= f.text_area :body, :placeholder => "メッセージを入力してください" %>
    <%= f.submit "送信"%>
  <% end %>

<% end %>

</section>
