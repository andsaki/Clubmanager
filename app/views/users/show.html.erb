<section class="column">
<div class = "dropposi">
  <ul id = "fade-in2" class="dropmenu">
    <li><%= image_tag('edit_b.png', class: 'edit_b') %>
      <ul>
        <li><%= link_to "プロフィールを編集",edit_user_registration_path%></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete%></li>
        <li><%= link_to "キャンセル",current_user%></li>
      </ul>
    </li>
  </ul>
</div>

<% provide(:title, @user.username) %>
<h1><%= @user.username %></h1>



<% if @user.image? %>
  <div class="thumbnail">
    <%= image_tag @user.image.url %>
  </div>
<% else %>
  <%= link_to image_tag('apio.png', :size => '100x100') %>
<% end %>

<h2>誕生日: <%= @user.month %>/<%= @user.day %></h2>
<h2>年齢: <%= @user.age %></h2>
<h2>所在地: <%= @user.location %></h2>
<h2>自己紹介: <%= @user.comment %></h2>


</section>
