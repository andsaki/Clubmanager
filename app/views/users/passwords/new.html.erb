<div class = "contents">
  <div class = "titleposi">
<h1>Reset password</h1>
  </div>
  <br/>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <br>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Reset Password!!" %>
  </div>
<% end %>
<br/>

</div>
