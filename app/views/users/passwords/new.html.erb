<div class = "contents">
<h2>パスワードのリセット</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <br>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "パスワードリセット" %>
  </div>
<% end %>
<br>
<%= render "users/shared/links" %>
<br>
</div>
