<!DOCTYPE html>
<html>

<!-- header -->
  <head>
    <title>Club Manager</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<!-- body -->
  <body>
    <!-- header -->
    <%= render "posts/header"%>

    <div class = "outline">
      <div class = "pagebody">
        <!-- main -->
        <% if (current_user != nil)%>
        <div class = "pagebodymain">
          <!--<section class = "column">-->
        <%= yield %>
      <!--</section>-->
      </div>

        <!-- bodysub -->
        <div class = "pagebodysub">
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete ,class: 'logout'%>
          <%= render "posts/profile"%>
          <%= render "posts/calendar"%>
          <%= render "posts/member"%>
        </div>
        <%else%>
        <%= yield %>
        <% end %>
        <!-- footer -->
        <%= render "posts/footer"%>
      </div>
    </div>
  </body>

</html>
